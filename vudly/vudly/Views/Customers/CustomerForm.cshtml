@model vudly.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (@Html.BeginForm("Save", "Customers"))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Customers.Name)
        @Html.TextBoxFor(m => m.Customers.Name, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customers.Birthdate)
        @Html.TextBoxFor(m => m.Customers.Birthdate,"{0:d MM yyyy}", new { @class = "form-control" })

    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Customers.MembershipType)
        @Html.DropDownListFor(m => m.Customers.MembershipType, new SelectList(Model.MembershipTypes,"Id", "Name"), "select membership",
                                   new { @class = "form-control" })

    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customers.IsSubscribedToNewsLetter) IsSubscribedToNewsLetter?
        </label>

    </div>


    @Html.HiddenFor(m=> m.Customers.Id)
    <button class="btn btn-primary" type="submit">Save</button>
}

